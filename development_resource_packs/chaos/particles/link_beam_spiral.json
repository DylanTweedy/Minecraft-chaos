{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "chaos:link_beam_spiral",
      "basic_render_parameters": {
        "material": "particles_additive",
        "texture": "textures/particle/spiral"
      }
    },
    "components": {
      "minecraft:emitter_initialization": {
        "creation_expression": "variable.chaos_dist = math.max(0.01, variable.chaos_dist); variable.chaos_speed = math.max(0.1, variable.chaos_speed);"
      },
      "minecraft:emitter_lifetime_once": {},
      "minecraft:emitter_rate_instant": { "num_particles": 1 },
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "variable.chaos_dist / math.max(0.1, variable.chaos_speed)"
      },

      "minecraft:particle_appearance_billboard": {
        "size": [0.2, 0.2],
        "facing_camera_mode": "rotate_xyz"
      },
      "minecraft:particle_appearance_rotation": {
        "rotation": [0, "variable.particle_age * 1200"]
      },
      "minecraft:particle_appearance_tinting": {
        "color": [0.25, 0.9, 1.0, 0.9]
      },
      "minecraft:emitter_shape_point": {
        "direction": [
          "variable.chaos_dir_x",
          "variable.chaos_dir_y",
          "variable.chaos_dir_z"
        ]
      },
      "minecraft:particle_initial_speed": "variable.chaos_speed * (0.6 + variable.particle_random_0 * 0.4)",
      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [0, 0, 0]
      }
    }
  }
}
