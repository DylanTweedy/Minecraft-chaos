{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "chaos:link_output_burst",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/burst"
      }
    },
    "components": {
      "minecraft:emitter_lifetime_once": {},
      "minecraft:emitter_rate_instant": { "num_particles": 1 },
      "minecraft:particle_lifetime_expression": { "max_lifetime": 0.35 },

      "minecraft:particle_appearance_billboard": {
        "size": [
          "math.lerp(0.08, 0.16, variable.particle_age / variable.particle_lifetime)",
          "math.lerp(0.08, 0.16, variable.particle_age / variable.particle_lifetime)"
        ],
        "facing_camera_mode": "rotate_xyz"
      },
      "minecraft:particle_appearance_rotation": {
        "rotation": ["variable.particle_random_0 * 360", "variable.particle_age * 540"]
      },
      "minecraft:particle_appearance_tinting": {
        "color": [
          "1.0",
          "0.55",
          "0.2",
          "variable.chaos_color_a * 0.8 * (1 - variable.particle_age / variable.particle_lifetime)"
        ]
      }
    }
  }
}
