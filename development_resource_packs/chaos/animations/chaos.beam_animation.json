{
  "format_version": "1.8.0",
  "animations": {
    "animation.chaos.beam.transform": {
      "loop": true,
      "bones": {
        "bb_main": {
          "scale": [ 1.0, 1.0, "v.beam_len" ],
          "rotation": [
            "v.pitch",
            "v.yaw",
            "v.spin"
          ]
        }
      }
    },
      "animation.chaos.beam.orient_horizontal": {
      "loop": true,
      "bones": {
        "bb_main": {
          "rotation": [0, 0, 0]
        }
      }
    },
    "animation.chaos.beam.orient_vertical": {
      "loop": true,
      "bones": {
        "bb_main": {
          "rotation": [90, 0, 0]
        }
      }
    },
    "animation.chaos.beam.spin": {
      "loop": true,
      "bones": {
        "bb_main": {
          "rotation": [0, "query.life_time * 360 * 0.25", 0]
        }
      }
    }    
  }
}