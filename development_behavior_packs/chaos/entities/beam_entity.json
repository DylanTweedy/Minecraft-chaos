{
  "format_version": "1.21.20",
  "minecraft:entity": {
    "description": {
      "identifier": "chaos:beam_entity",
      "is_spawnable": false,
      "is_summonable": true,
      "properties": {
        "chaos:canary": {
          "type": "int",
          "range": [0, 10],
          "default": 0,
          "client_sync": true
        },
        "chaos:beam_len": {
          "type": "float",
          "range": [1, 64],
          "default": 1,
          "client_sync": true
        },
        "chaos:beam_alpha": {
          "type": "float",
          "range": [0, 1],
          "default": 1,
          "client_sync": true
        },
        "chaos:beam_spin": {
          "type": "float",
          "range": [0, 2000],
          "default": 0,
          "client_sync": true
        }
      }
    },
    "components": {
      "minecraft:type_family": { "family": ["chaos_beam_entity"] },

      "minecraft:collision_box": { "width": 0.01, "height": 0.01 },
      "minecraft:physics": { "has_gravity": false, "has_collision": false },
      "minecraft:health": { "value": 9999, "max": 9999 },

      "minecraft:damage_sensor": {
        "triggers": [
          { "cause": "all", "deals_damage": false }
        ]
      }
    },
    "events": {
      "chaos:init": {
        "set_property": {
          "chaos:canary": 7,
          "chaos:beam_len": 1,
          "chaos:beam_alpha": 1,
          "chaos:beam_spin": 360
        }
      },
      "chaos:set_len_16": {
        "set_property": { "chaos:beam_len": 16 }
      },
      "chaos:set_len_64": {
        "set_property": { "chaos:beam_len": 64 }
      },
      "chaos:fade_out": {
        "set_property": { "chaos:beam_alpha": 0.0 }
      },
      "chaos:despawn": { "remove": {} }
    }
  }
}
