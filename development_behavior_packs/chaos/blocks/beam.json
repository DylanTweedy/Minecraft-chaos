{
  "format_version": "1.21.130",
  "minecraft:block": {
    "description": {
      "identifier": "chaos:beam",
      "menu_category": { "category": "construction" },
      "states": {
        "chaos:axis": ["x", "y", "z"]
      }
    },
    "components": {
      "minecraft:geometry": "geometry.chaos.beam",

      "minecraft:material_instances": {
        "*": { "texture": "chaos_beam", "render_method": "blend" }
      },

      "minecraft:collision_box": false,

      "minecraft:selection_box": {
        "origin": [0.4375, 0.4375, 0.4375],
        "size":   [0.125,  0.125,  0.125]
      },

      "minecraft:light_emission": 8,
      "minecraft:destructible_by_mining": { "seconds_to_destroy": 0.0 },
      "minecraft:destructible_by_explosion": { "explosion_resistance": 0 }
    },

    "permutations": [
      {
        "condition": "q.block_state('chaos:axis') == 'y'",
        "components": {
          "minecraft:transformation": { "rotation": [90, 0, 0] }
        }
      },
      {
        "condition": "q.block_state('chaos:axis') == 'z'",
        "components": {
          "minecraft:transformation": { "rotation": [0, 90, 0] }
        }
      }
    ]
  }
}
