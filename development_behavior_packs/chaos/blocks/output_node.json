{
  "format_version": "1.21.130",
  "minecraft:block": {
    "description": {
      "identifier": "chaos:output_node",
      "menu_category": { "category": "construction" },
      "states": {
        "chaos:level": [1, 2, 3, 4, 5]
      },
      "traits": {
        "minecraft:placement_position": {
          "enabled_states": ["minecraft:block_face"]
        }
      }
    },

    "components": {
      "minecraft:geometry": "minecraft:geometry.full_block",
      "minecraft:material_instances": {
        "*":    { "texture": "output_node_side",   "render_method": "opaque" },
        "up":   { "texture": "output_node_top",    "render_method": "opaque" },
        "down": { "texture": "output_node_bottom", "render_method": "opaque" }
      }
    },

    "permutations": [
      {
        "condition": "q.block_state('minecraft:block_face') == 'down'",
        "components": { "minecraft:transformation": { "rotation": [180, 0, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'up'",
        "components": { "minecraft:transformation": { "rotation": [0, 0, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'north'",
        "components": { "minecraft:transformation": { "rotation": [-90, 0, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'south'",
        "components": { "minecraft:transformation": { "rotation": [90, 0, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'east'",
        "components": { "minecraft:transformation": { "rotation": [0, 0, -90] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'west'",
        "components": { "minecraft:transformation": { "rotation": [0, 0, 90] } }
      },
      {
        "condition": "q.block_state('chaos:level') == 1",
        "components": {
          "minecraft:light_emission": 2,
          "minecraft:material_instances": {
            "*":    { "texture": "output_node_side",   "render_method": "opaque" },
            "up":   { "texture": "output_node_top",    "render_method": "opaque" },
            "down": { "texture": "output_node_bottom", "render_method": "opaque" }
          }
        }
      },
      {
        "condition": "q.block_state('chaos:level') == 2",
        "components": {
          "minecraft:light_emission": 4,
          "minecraft:material_instances": {
            "*":    { "texture": "output_node_side2",  "render_method": "opaque" },
            "up":   { "texture": "output_node_top",    "render_method": "opaque" },
            "down": { "texture": "output_node_bottom", "render_method": "opaque" }
          }
        }
      },
      {
        "condition": "q.block_state('chaos:level') == 3",
        "components": {
          "minecraft:light_emission": 6,
          "minecraft:material_instances": {
            "*":    { "texture": "output_node_side3",  "render_method": "opaque" },
            "up":   { "texture": "output_node_top",    "render_method": "opaque" },
            "down": { "texture": "output_node_bottom", "render_method": "opaque" }
          }
        }
      },
      {
        "condition": "q.block_state('chaos:level') == 4",
        "components": {
          "minecraft:light_emission": 9,
          "minecraft:material_instances": {
            "*":    { "texture": "output_node_side4",  "render_method": "opaque" },
            "up":   { "texture": "output_node_top",    "render_method": "opaque" },
            "down": { "texture": "output_node_bottom", "render_method": "opaque" }
          }
        }
      },
      {
        "condition": "q.block_state('chaos:level') == 5",
        "components": {
          "minecraft:light_emission": 12,
          "minecraft:material_instances": {
            "*":    { "texture": "output_node_side5",  "render_method": "opaque" },
            "up":   { "texture": "output_node_top",    "render_method": "opaque" },
            "down": { "texture": "output_node_bottom", "render_method": "opaque" }
          }
        }
      }
    ]
  }
}
